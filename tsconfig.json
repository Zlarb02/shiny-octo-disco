{
  "compilerOptions": {
    "lib": ["es5", "es6", "ESNext", "dom"],
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*"]
  //"exclude": ["./build", "node_modules"]
}
